            <xs:attribute name="ns" type="xs:anyURI">
              <xs:annotation>
                <xs:documentation>
                  <![CDATA[要导入作为附加数据的命名空间。]]>
                </xs:documentation>
              </xs:annotation>
            </xs:attribute>
          </xs:complexType>
        </xs:element>
      </xs:choice>
    </xs:complexType>
  </xs:element>
  
